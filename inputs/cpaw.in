<comment>
problem   = 3D Circularly Polarized Alfven Wave
reference = G. Toth. JCP, vol. 161, pp. 605-662 (2000).

<job>
problem_id = cpaw

<problem/cpaw>
compute_error = true  # set value to one to compute L1 error compared to initial data
b_par   = 1.0         # B parallel
b_perp  = 0.1         # B perpendicular
pres    = 0.1         # pressure
v_par   = 0.0         # vpar = {0, 1} -> {traveling, standing} wave
dir     = 1           # 1: right polarization (whistler wave), 2: left

<parthenon/mesh>
refinement = none
nghost = 2

nx1 = 64
x1min = 0.0
x1max = 3.0
ix1_bc = periodic
ox1_bc = periodic

nx2 = 32
x2min = 0.0
x2max = 1.5
ix2_bc = periodic
ox2_bc = periodic

nx3 = 32
x3min = 0.0
x3max = 1.5
ix3_bc = periodic
ox3_bc = periodic

<parthenon/meshblock>
nx1=32
nx2=32 
nx3=32

<parthenon/time>
integrator = vl2
cfl = 0.3
tlim = 1.0
nlim = 100000
perf_cycle_offset = 2 # number of inital cycles not to be included in perf calc

<hydro>
fluid = glmmhd
eos = adiabatic
reconstruction = plm
gamma = 1.666666666666667 # gamma = C_p/C_v
use_scratch = true
scratch_level = 0 # 0 is actual scratch (tiny); 1 is HBM

<parthenon/output0>
file_type = hdf5
dt = 0.1
variables = cons
